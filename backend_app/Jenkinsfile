pipeline {
  agent any

  stages {

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build Image') {
      steps {
        sh 'docker build -t backend-cicd:latest .'
      }
    }

    stage('Deploy Container') {
      steps {
        sh 'docker rm -f backend_app || true'
        sh 'docker run -d --name backend_app -p 3000:3000 backend-cicd:latest'
      }
    }

    stage('Health Check') {
      steps {
        sh 'sleep 5'
        sh 'curl -f http://localhost:3000/health'
      }
    }

  }
}





















 
